<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMauiApp.Views.CarDetailsPage"
             xmlns:vm="clr-namespace:FirstMauiApp.ViewModels"
             Title="{Binding Car.Make}"
             x:DataType="vm:CarDetailsViewModel">
    <VerticalStackLayout>
        <Label 
            Text="{Binding Car.Vin}"
            VerticalOptions="Center" 
            HorizontalOptions="Center" FontSize="Large"/>
    </VerticalStackLayout>
</ContentPage>  